#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <windows.h>
#include <time.h>
#include "Header.h"
#define player 4
#define Joker 2

struct user//종합 구조체
{
	char name[30]; //유저 닉네임
	int deck[13]; //유저의 카드 정보 
	char class[4]; //계급,(왕 귀족 평민 농노)
};

int Revolution(struct user* _user) {//혁명
	int n = 0;
	for (int i = 0; i < player; i++) 
		if ((_user + i)->class == "농노") 
		{
			if ((_user + i)->deck[12] == 2)
			{
				printf("혁명을 일으킬 수 있습니다. 혁명을 일으키겠습니까?(1. 예, 2. 아니요): ");
				scanf_s("%d", &n);

				if (n == 2) {
					break;
					return -1;
				}

				printf("계급이 뒤바뀌었습니다!!\n\n");
				printf("계급\n\n");
				for (int j = 0; j < player; j++) {
					if (_user[j].class == "왕")
						strcpy((_user + j)->class, "농노");
					if (_user[j].class == "귀족")
						strcpy((_user + j)->class, "평민");
					if (_user[j].class == "평민")
						strcpy((_user + j)->class, "귀족");
					if (_user[j].class == "농노")
						strcpy((_user + j)->class, "왕");
				}
				(_user + i)->deck[12] = 0;
				return 0;
			}
			else
				return -1;
		}
}
