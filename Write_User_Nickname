#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <windows.h>
#include <time.h>
#define player 4
#define Joker 2

struct user//종합 구조체
{
	char name[30]; //유저 닉네임
	int deck[13]; //유저의 카드 정보 
	char class[4]; //계급,(왕 상인 소작농 농노)
};

void Write_User_Nickname(struct user* _user){//닉네임 
	
	printf("플레이어의 닉네임을 차례대로 입력하시오(9자 이내):\n");
	for (int i = 0; i < (player + 1); i++)
		gets_s(_user[i].name, 10);
	printf("지정된 플레이어의 닉네임은\n");
	for (int i = 0; i < (player + 1); i++)
		printf("%s\n ", _user[i].name);
}
